{
  "scripts": {
    "prestart": "mongod --dbpath server/data/mongodb --fork --logpath /dev/null",
    "start": "node server/index.js &",
    "stop": "killall wife.io; exit 0",
    "poststop": "mongo admin --eval 'db.shutdownServer()' 2>&1 >/dev/null; rm -f server/data/mongodb/mongod.lock; exit 0"
  }
}
